{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@synx/jsx",
    "baseUrl": ".",
    "paths": {
      "@synx/frp": [
        "packages/frp/src/index.ts"
      ],
      "@synx/frp/reactive": [
        "packages/frp/src/reactive.public.ts"
      ],
      "@synx/frp/event": [
        "packages/frp/src/event.public.ts"
      ],
      "@synx/frp/batch": [
        "packages/frp/src/batch.public.ts"
      ],
      "@synx/frp/lift": [
        "packages/frp/src/lift.public.ts"
      ],
      "@synx/frp/*": [
        "packages/frp/src/*"
      ],
      "@synx/dom": [
        "packages/dom/src/index.ts"
      ],
      "@synx/dom/*": [
        "packages/dom/src/*"
      ],
      "@synx/dsl": [
        "packages/dsl/src/index.ts"
      ],
      "@synx/dsl/*": [
        "packages/dsl/src/*"
      ],
      "@synx/icon": [
        "packages/icon/src/index.ts"
      ],
      "@synx/icon/components": [
        "packages/icon/src/components/index.ts"
      ],
      "@synx/icon/*": [
        "packages/icon/src/*"
      ],
      "@synx/jsx": [
        "packages/jsx/src/index.ts"
      ],
      "@synx/jsx/jsx-runtime": [
        "packages/jsx/src/jsx-runtime.ts"
      ],
      "@synx/jsx/jsx-dev-runtime": [
        "packages/jsx/src/jsx-dev-runtime.ts"
      ],
      "@synx/jsx/*": [
        "packages/jsx/src/*"
      ]
    }
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "examples/**/*.ts",
    "examples/**/*.tsx",
    "vitest.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
